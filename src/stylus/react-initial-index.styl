*
  box-sizing border-box
html,body
  overflow: hidden
  background silver
  font-family Arial
  margin 0
  padding 0
  height 100%
ul,li
  padding 0
  margin 0
  list-style none
header,footer
  position absolute
  height 40px
  text-align center
  line-height 40px
  background #8699a4
  left 0
  right 0
  color white
header
  top 0
footer
  bottom 0
.initial-index
  overflow hidden
  background white
  top 40px
  bottom 40px
  left 0
  right 0
  position fixed
  >div
    height 100%
  .list
    position absolute
    left 0
    right 30px
    overflow hidden
    &>li
      &>label
        font-weight bold
        display block
        padding 10px
        background #e5e5e5
      &>ul>li
        padding 15px
        border-bottom 1px dotted silver
  .quick-search
    font-size 10px
    position absolute
    display table
    background gray
    color white
    width 30px
    height 100%
    right 0
    li
      display table-row
      span
        display table-cell
        text-align center
        vertical-align middle
        padding 0
        margin 0
        line-height 0
        border none